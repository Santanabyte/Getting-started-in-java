package numero.inteiro;

import java.util.Scanner;

public class NumeroInteiro {

    public static void main(String[] args) {
        Scanner mondial = new Scanner(System.in);
        System.out.println("Escolha um numero: ");
        int numero = mondial.nextInt();
        
        System.out.println("O numero da variavel e: " + numero);
        System.out.println("O seu antecessor e: " + (numero -1));
        System.out.println("O seu sucessor e: " + (numero +1));

    mondial.close();
        
    }
    
}
